<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CityECommerceex"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activites.SearchActivity"
            android:theme="@style/Theme.CityECommerceexDarkActionBar"
            android:exported="false" />
        <activity
            android:name=".activites.CategoryActivity"
            android:exported="false"
            android:label="Payment"
            android:theme="@style/Theme.CityECommerceexDarkActionBar" />
        <activity
            android:name=".activites.PaymentActivity"
            android:exported="false"
            android:label="Payment"
            android:theme="@style/Theme.CityECommerceexDarkActionBar" />
        <activity
            android:name=".activites.CheckoutActivity"
            android:exported="false"
            android:theme="@style/Theme.CityECommerceexDarkActionBar" />
        <activity
            android:name=".activites.CartActivity"
            android:exported="false"
            android:label="Shoping cart"
            android:theme="@style/Theme.CityECommerceexDarkActionBar" />
        <activity
            android:name=".activites.ProductDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.CityECommerceexDarkActionBar" />
        <activity
            android:name=".activites.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>